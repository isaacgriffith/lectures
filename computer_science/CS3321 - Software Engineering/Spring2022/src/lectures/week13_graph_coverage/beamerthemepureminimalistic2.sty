\ProvidesPackage{beamerthemepureminimalistic2}[v1.2.4]

\mode<presentation>

\DeclareOptionBeamer{darkmode}{\PassOptionsToPackage{darkmode}{beamercolorthemepureminimalistic2}}
\DeclareOptionBeamer{showmaxslides}{\PassOptionsToPackage{showmaxslides}{beamerouterthemepureminimalistic2}}
\DeclareOptionBeamer{nofooter}{\PassOptionsToPackage{nofooter}{beamerouterthemepureminimalistic2}}
\DeclareOptionBeamer{nofirafonts}{\PassOptionsToPackage{nofirafonts}{beamerfontthemepureminimalistic2}}
\DeclareOptionBeamer{helvetica}{\PassOptionsToPackage{helvetica}{beamerfontthemepureminimalistic2}}

\ProcessOptionsBeamer

% Settings
\usefonttheme{pureminimalistic2}
\usecolortheme{pureminimalistic2}
\useoutertheme{pureminimalistic2}
\useinnertheme{pureminimalistic2}

\setbeamertemplate{navigation symbols}{}%
\beamerdefaultoverlayspecification{}

\def\maketitle{%
	{%Set beamer template only works for the following frames.
	% Would need a different way to support calling \maketitle in
	% a frame environment
		\setbeamertemplate{footline}{}%
		\setbeamertemplate{frametitle}[largetitle]%

		\begin{frame}[noframenumbering]%
			\titlepage%
		\end{frame}%
	}
}


\mode<all>
